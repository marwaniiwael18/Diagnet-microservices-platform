# ============================================
# DiagNet Platform - Environment Variables
# ============================================
# IMPORTANT: Never commit this file with real values!
# This is a template - copy to .env and fill with actual secrets

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=diagnet_admin
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=diagnet_db

# ============================================
# JWT Authentication
# ============================================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_USE_OPENSSL_RAND_BASE64_64_TO_GENERATE

# ============================================
# MQTT Broker
# ============================================
MQTT_BROKER_HOST=mosquitto
MQTT_BROKER_PORT=1883
MQTT_USERNAME=diagnet
MQTT_PASSWORD=CHANGE_ME_MQTT_PASSWORD

# ============================================
# Grafana
# ============================================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# ============================================
# Backend Services
# ============================================
GATEWAY_PORT=8080
COLLECTOR_PORT=8081
ANALYZER_PORT=8082

# ============================================
# Frontend
# ============================================
VITE_API_URL=http://localhost:8080/api

# ============================================
# Observability
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ============================================
# Spring Profiles
# ============================================
SPRING_PROFILES_ACTIVE=prod
